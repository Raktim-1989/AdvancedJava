
public class PrintNameWithoutLoop {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		String name = "raktim";
		String s = "i";
		
		s  = s.replaceAll("i", "iiiiiiiiii");
		s  = s.replaceAll("i", "iiiiiiiiii");
		
		System.out.println(s.length());
		
		s = s.replaceAll("i", name + "\n");
		
		System.out.println(s);
		
		
		

	}

}
